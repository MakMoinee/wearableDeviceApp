<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WearablDeviceApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.WearablDeviceApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WearablDeviceApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WearablDeviceApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomStyle" parent="Theme.Design.Light.NoActionBar">
        <item name="colorPrimary">#FFF27E</item>
        <item name="colorAccent">@color/purple_500</item>
    </style>

    <style name="CustomStyleWithAction" parent="Theme.Design.Light">
        <item name="colorPrimary">#FFF27E</item>
        <item name="colorAccent">@color/purple_500</item>
    </style>

    <style name="CustomStyleYellow" parent="Theme.Design.Light">
        <item name="colorPrimary">#FFF27E</item>
        <item name="colorAccent">#FFF27E</item>
    </style>

    <style name="CustomStyleBlue" parent="Theme.Design.Light">
        <item name="colorPrimary">#03A9F4</item>
        <item name="colorAccent">#03A9F4</item>
    </style>

    <style name="CustomStyleRed" parent="Theme.Design.Light">
        <item name="colorPrimary">#F44336</item>
        <item name="colorAccent">#F44336</item>
    </style>

    <style name="BebasStyle">
        <item name="android:fontFamily">@font/bebas</item>

        <item name="android:textSize">20sp</item>
    </style>
</resources>